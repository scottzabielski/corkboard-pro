{
  "name": "corkboard-pro",
  "version": "1.0.0",
  "description": "Advanced corkboard notes app with real-time collaboration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "backend": "nodemon server.js",
    "frontend": "npx serve public -p 3000",
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "build": "echo 'Build complete'",
    "generate-icons": "node scripts/generate-icons.js",
    "postinstall": "npm run generate-icons || echo 'Icon generation failed, using fallbacks'"
  },
  "keywords": [
    "notes",
    "corkboard",
    "collaboration",
    "productivity"
  ],
  "author": "Scott",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.5",
    "socket.io": "^4.7.2",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1",
    "serve": "^14.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
